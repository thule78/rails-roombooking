<div class="container">
  <div class="col-md-7 banner">
    <h1><span class="text-red">SaiGon Room</span> Book unique homes and experience like a local.</h1>
  </div>
<%= form_tag search_path, method: :get do %>
  <div class="row m-5">
    <div class="col-md-6">
      <%= text_field_tag :search, params[:search], placeholder: "Where are you going?", class: 'form-control'%>
    </div>
    <div class="col-md-3">
      <%= text_field_tag :start_date, params[:start_date], placeholder: "Check In", class: 'form-control datepicker' %>
    </div>
    <div class="col-md-3">
      <%= text_field_tag :end_date, params[:end_date], placeholder: "Check Out", class: 'form-control datepicker' %>
    </div>
    </div>
    <br >
    <div class="row">
      <div class="col-md-4 offset-4">
        <%= submit_tag "search", class: 'btn-babu btn-block'%>
      </div>
    </div>
    <hr />
  </div>
<% end %>

<!--Homes-->

  <div class="ml-5"><h3>Homes</h3></div><br />
  <div class="row m-3">
    <%= render partial: "rooms/rooms_list", locals: {rooms: @rooms} %>
  </div>

  <!--Locations-->
  <div class="ml-5"><h3>Hot Locations:</h3></div>
  <div class="row m-3">
    <div class="col-md-3 col-12">
      <a href="http://localhost:3000/search?search=ho+chi+minh%2C+district1">
      <div class="discovery-card" style="background-image: url('assets/district1.jpg')">District 1</div></a>
    </div>
    <div class="col-md-3 col-12">
      <a href="http://localhost:3000/search?search=ho+chi+minh%2C+district3">
      <div class="discovery-card" style="background-image: url('assets/district3.jpg')">District 3</div></a>
    </div>
    <div class="col-md-3 col-12">
      <a href="http://localhost:3000/search?search=ho+chi+minh%2C+district7">
      <div class="discovery-card" style="background-image: url('assets/district-7.jpg')">District 7</div></a>
    </div>
    <div class="col-md-3 col-12">
      <a href="http://localhost:3000/search?search=ho+chi+minh%2C+district2">
      <div class="discovery-card" style="background-image: url('assets/district2.jpg')">District 2</div></a>
    </div>
</div>

<script src="https://code.jquery.com/ui/1.12.0/jquery-ui.js"></script>
<script>
  $('#start_date').datepicker({
    dateFormat: 'dd-mm-yy',
    minDate: 0,
    maxDate: '6m',
    onSelect: function(selected){
      $('#end_date').datepicker('option', 'minDate', selected);
      $('#end_date').attr('disabled', false);
    }
  });

  $('#end_date').datepicker({
    dateFormat: 'dd-mm-yy',
    minDate: 0,
    maxDate: '6m',
    onSelect: function(selected){
      $('#start_date').datepicker('option', 'maxDate', selected);
    }
  });

</script>
