<div class="row mx-3">
  <div class="col-md-3 col-12">
    <ul class="sidebar-list">
      <li class="sidebar-item">
        <%= link_to "Your Listing", rooms_path, class: 'sidebar-link active'%>
      </li>

      <li class="sidebar-item">
        <%= link_to "Your Reservations", your_reservations_path, class: "sidebar-link"%>
      </li>
      <li class="sidebar-item">
        <%= link_to "Your Trips", your_trips_path, class: 'sidebar-link'%>
      </li>
    </ul>
  </div>
  <div class="col-md-9 col-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Listing
      </div>
      <div class="panel-body">
        <% @rooms.each do |room| %>
        <div class="row mt-3">
          <div class="col-md-2 col-12">
            <%= image_tag room.cover_photo(:thumb) %>
          </div>
          <div class="col-md-7">
            <h4><%= room.listing_name %></h4>
          </div>
          <div class="col-md-3 right">
            <%= link_to "Update", listing_room_path(room), class: 'btn-babu'%>
          </div>
        </div>
        <hr>
        <% end %>
      </div>
    </div>
  </div>
</div>
