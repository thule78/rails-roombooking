<% rooms.each do |room| %>
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading preview">
          <%= link_to room do %>
          <%= image_tag room.cover_photo(:medium) %>
          <% end %>
        </div>
        <div class="panel-body">
          <%= link_to room.listing_name, room %><br/>
          $<%= room.price %> - <%= room.home_type %> - <%= pluralize(room.bed_room, "bed") %>
          <div id="star_<%= room.id %>"></div> <%= pluralize(room.average_rating, "review") %>
        </div>
      </div>
    </div>

    <script>
      $('#star_<%= room.id %>').raty({
        path: 'https://cdnjs.cloudflare.com/ajax/libs/raty/2.8.0/images/',
        readOnly: true,
        score: <%= room.average_rating %>
      });
    </script>
<% end %>

