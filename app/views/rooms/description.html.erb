<div class="row">
  <div class="col-md-3 col-12">
    <%= render 'room_menu'%>
  </div>
  <div class="col-md-9 col-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Description
      </div>
      <div class="panel-body">
        <div class="container">
          <%= form_for @room do |f|%>
          <div class="row">
            <div class="form-group col-md-10">
              <label for="">Listing Name</label>
              <%= f.text_field :listing_name, placeholder: "Mountain view house", class: "form-control"%>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-10">
              <label for="">Summary</label>
              <%= f.text_area :summary, placeholder: "Nice tiny house on the tree with mountain view", class: "form-control"%>
            </div>
          </div>
          <div class="text-center">
            <%= f.submit "Save", class: 'btn btn-outline-info'%>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
