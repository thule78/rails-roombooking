<ul class="sidebar-list ml-5">
  <li class="sidebar-item ">
    <%= link_to "Listing", listing_room_path, class: 'sidebar-link active'%>
    <% if !@room.home_type.blank? && !@room.room_type.blank? && !@room.accommodate.blank? && !@room.bed_room.blank? && !@room.bath_room.blank?%>
    <span class="float-right text-babu pr-3"><i class="fas fa-check"></i></span>
    <% end %>
  </li>
  <li class="sidebar-item">

    <%= link_to "Pricing", pricing_room_path, class: 'sidebar-link active'%>
    <% if !@room.price.blank? && @room.price != 0 %>
    <span class="float-right text-babu pr-3"><i class="fas fa-check"></i></span>
    <% end %>
  </li>
  <li class="sidebar-item">
    <%= link_to "Description", description_room_path, class: 'sidebar-link active'%>
    <% if !@room.summary.blank? && !@room.listing_name.blank? %>
    <span class="float-right text-babu pr-3"><i class="fas fa-check"></i></span>
    <% end %>
  </li>
  <li class="sidebar-item">
    <%= link_to "Photos", photo_upload_room_path, class: 'sidebar-link active'%>
    <% if !@room.photos.blank? %>
    <span id="photo_check" class="float-right text-babu pr-3"><i class="fas fa-check"></i></span>
    <% end %>
  </li>
  <li class="sidebar-item">
    <%= link_to "Amenities", amenities_room_path, class: 'sidebar-link active'%>
    <% if !@room.is_tv.blank? || !@room.is_air.blank? || !@room.is_heating.blank? || !@room.is_kitchen.blank? || !@room.is_internet.blank?%>
    <span class="float-right text-babu pr-3"><i class="fas fa-check"></i></span>
    <% end %>
  </li>
  <li class="sidebar-item">
    <%= link_to "Location", location_room_path, class: 'sidebar-link active'%>
    <% if !@room.address.blank? %>
    <span class="float-right text-babu pr-3"><i class="fas fa-check"></i></span>
    <% end %>
  </li>
</ul>
<hr >
<% is_ready = !@room.active && !@room.price.blank? && !@room.listing_name.blank? && !@room.photos.blank? && !@room.address.blank? && !@room.home_type.blank? && !@room.room_type.blank? && !@room.accommodate.blank? && !@room.bed_room.blank? && !@room.bath_room.blank?  %>
<%= form_for @room do |f|%>
  <%= f.hidden_field :active, value: true %>
  <%= f.submit "Publish", id: "publish_button", class: 'btn btn-danger btn-lg btn-block', disabled: !is_ready %>
<% end %>
