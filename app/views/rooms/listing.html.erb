<div class="row">
  <div class="col-md-3 col-12">
    <%= render 'room_menu'%>
  </div>
  <div class="col-md-9 col-12">
    <div class="panel panel-default">
      <div class="panel-heading p-3">
        Listing
      </div>
      <div class="panel-body">
        <div class="container">
          <%= form_for @room do |f|%>
          <div class="row mt-3">
            <div class="col-12 col-md-4 select">
              <div class="form-group">
                <label for="">Home Type</label>
                <%= f.select :home_type, [['Apartment', 'Apartment'], ["House", "House"], ["Bed & Breakfast", "Bed & Breakfast"]],
                id: 'home_type', prompt: "Select...", class: 'form-control', required: true %>
              </div>
            </div>
            <div class="col-12 col-md-4 select">
              <div class="form-group">
                <label for="">Room Type</label>
                <%= f.select :room_type, [['Entire', 'Entire'], ["Private", "Private"], ["Shared", "Shared"]],
                id: 'room_type', prompt: "Select...", class: 'form-control', required: true%>
              </div>
            </div>
            <div class="col-12 col-md-4 select">
            <div class="form-group">
              <label for="">Booking Type</label>
              <%= f.select :instant, Room.instants.map {|key,value| [key.humanize, key]}, selected: 'Instant', prompt: "Select...", class: 'form-control', required: true%>
            </div>
          </div>

            <div class="col-12 col-md-4 select">
              <div class="form-group">
                <label for="">Accommodate</label>
                <%= f.select :accommodate, [['1', 1], ["2", 2], ["3", 3], ["4+", 4]],
                id: 'accommodate', prompt: "Select...", class: 'form-control', required: true%>
              </div>
            </div>

            <div class="col-12 col-md-4 select">
              <div class="form-group">
                <label for="">Bedrooms</label>
                <%= f.select :bed_room, [['1', 1], ["2", 2], ["3", 3], ["4+", 4]],
                id: 'bed_room', prompt: "Select...", class: 'form-control', required: true%>
              </div>
            </div>

            <div class="col-12 col-md-4 select">
              <div class="form-group">
                <label for="">Bathrooms</label>
                <%= f.select :bath_room, [['1', 1], ["2", 2], ["3", 3], ["4+", 4]],
                id: 'bath_room', prompt: "Select...", class: 'form-control', required: true%>
              </div>
            </div>
          </div>
          <div><%= f.submit "Save", class: 'btn-babu' %></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
